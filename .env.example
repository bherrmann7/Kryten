# Telegram Bot (get from @BotFather)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Anthropic API key (https://console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-...

# Claude model to use
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Admin Telegram user ID â€” receives access approval requests via DM.
# This user always has access. Required for the approval workflow.
ADMIN_USER_ID=

# Comma-separated Telegram user IDs pre-approved to use the bot.
# New users not on this list go through the approval flow.
# Leave empty to require approval for everyone except the admin.
ALLOWED_USERS=

# Conversation history buffer size (number of message pairs to keep)
MAX_HISTORY=20

# API pricing per million tokens (for cost tracking)
INPUT_COST_PER_M=3.0
OUTPUT_COST_PER_M=15.0
